<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block class="itg\LinkToFancy\Block\Display" name="LinkToFancy_display" template="itg_LinkToFancy::tolink.phtml" />
    </referenceContainer>
    
    <body>
     <referenceBlock name="header.links">
         <block class="itg\LinkToFancy\Block\link" name="add-new-header-link">
             <arguments>
                 <argument name="label" xsi:type="string" translate="true">Click here to go to the products menu</argument>
                 <argument name="path" xsi:type="string" translate="true">products-menu</argument>
            </arguments>
         </block>
     </referenceBlock>
    </body>
</page>
